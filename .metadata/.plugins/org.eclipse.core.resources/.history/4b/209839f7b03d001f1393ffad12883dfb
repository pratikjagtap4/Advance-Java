package basics;

class Bank
{
	int balance;
	
	Bank(int balance)
	{
		this.balance = balance;
		System.out.println("Your Initial Balance is " + balance);
	}
	
	public void withdraw(int amount)
	{
		if(amount<=balance)
		{
			balance = balance - amount ;
			System.out.println("Your new balance is " + balance);
		}
	}
	
	public void deposit(int amount)
	{
		
			balance = balance +amount ;
			System.out.println("Your new balance is " + balance);
		
	}
}

