<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>servlet intercommunication</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  
  <!-- RequestDispatcher -->
  <servlet>
  		<servlet-name>Login</servlet-name>
  		<servlet-class>intercommunication._01LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>Login</servlet-name>
  		<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
  		<servlet-name>Home</servlet-name>
  		<servlet-class>intercommunication._01homeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>Home</servlet-name>
  		<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
  		<servlet-name>Registration</servlet-name>
  		<servlet-class>intercommunication._01registrationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>Registration</servlet-name>
  		<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  
  <!-- sendRedirect -->
  
  <servlet>
  		<servlet-name>sendRedirectLogin</servlet-name>
  		<servlet-class>reDirectMethod._01LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  		<servlet-name>sendRedirectLogin</servlet-name>
  		<url-pattern>/reDirectlogin</url-pattern>
  </servlet-mapping>
  
   <servlet>
  		<servlet-name>sendRedirectWelcome</servlet-name>
  		<servlet-class>reDirectMethod._01WelcomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  		<servlet-name>sendRedirectWelcome</servlet-name>
  		<url-pattern>/welcome</url-pattern>
  </servlet-mapping>

	
<servlet>
  		<servlet-name>sendRedirectRegister</servlet-name>
  		<servlet-class>reDirectMethod._01RegistrationRedirect</servlet-class>
  </servlet>
  <servlet-mapping>
  		<servlet-name>sendRedirectRegister</servlet-name>
  		<url-pattern>/registerRedirect</url-pattern>
  </servlet-mapping>


</web-app>